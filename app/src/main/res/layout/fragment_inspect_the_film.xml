<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".Fragments.InspectTheFilm"
        android:background="#000"
        android:fillViewport="true"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
        />
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25"
        />
        <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/filmlogo"
                android:src="@drawable/warfare"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.21"
                app:layout_constraintWidth_percent="0.29"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline1"
                android:scaleType="centerCrop"
                app:riv_corner_radius="10dp"
                android:layout_marginStart="15dp"/>
        <TextView
                android:id="@+id/filmname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline1"
                app:layout_constraintStart_toEndOf="@+id/filmlogo"
                android:layout_marginStart="10dp"
                tools:text="Call Of Duty Modern Warfare 2"
                android:textSize="18sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-black"
                android:layout_margin="10dp"
        />
        <TextView
                android:id="@+id/category_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/filmlogo"
                app:layout_constraintTop_toBottomOf="@+id/filmname"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                tools:text="Action, War -    2 hours"
                android:textSize="13sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
        />
        <TextView
                android:id="@+id/imdb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.2"
                tools:text="8.0 \nIMDB"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toEndOf="@id/filmlogo"
                app:layout_constraintTop_toBottomOf="@id/category_hours"
                app:layout_constraintEnd_toStartOf="@id/rottentomato"
                android:layout_marginTop="10dp"/>
        <TextView
                android:id="@+id/rottentomato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.2"
                tools:text="8.0 \nRotten Tomato"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toEndOf="@id/imdb"
                app:layout_constraintTop_toTopOf="@id/imdb"
                app:layout_constraintEnd_toStartOf="@id/metacritic"
                />
        <TextView
                android:id="@+id/metacritic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.2"
                tools:text="8.0 \nMetacritic"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif"
                app:layout_constraintStart_toEndOf="@id/rottentomato"
                app:layout_constraintTop_toTopOf="@+id/rottentomato"
                app:layout_constraintEnd_toEndOf="parent"
                />
        <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                tools:text="\nThe Call of Duty series returns this time into a modern day setting. The player takes control of a character nicknamed 'Soap,' for the majority of the campaign and will need to progress through many modern warfare scenarios."
                android:textSize="15sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-light"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filmlogo"
                android:paddingStart="15dp"/>
        <Button
                android:id="@+id/readmore"
                android:layout_width="wrap_content"
                android:layout_height="21sp"
                android:background="@android:color/transparent"
                android:text="Read More"
                android:drawableEnd="@drawable/ic_down"
                android:textAllCaps="false"
                android:textColor="#fff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"/>
        <Button
                android:id="@+id/buybutton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/readmore"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/shape_corner_radius"
                android:text="Buy Game"
                android:textSize="16sp"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"/>
        <TextView
                android:id="@+id/screenshotsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Screenshots"
                android:textSize="15sp"
                android:textColor="#fff"
                android:fontFamily="sans-serif-black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/buybutton"
                android:layout_marginStart="15dp" android:layout_marginTop="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                tools:background="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/screenshotsText"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>